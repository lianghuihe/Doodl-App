<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <title>Doodl</title>
    </head>
    <body>
        <section class="container">
            <div id="toolbar">
                <img src = "/images/doodlLogo.png" alt="Doodl" style="width:70px;height:70px"></img>
                <label for="stroke">Colour</label>
                <input id="stroke" name='stroke' type="color"></input>
                <label for="lineWidth">Line Width</label>
                <input id="lineWidth" name='lineWidth' type="number" value="5" min="1" max="100"></input>
                <button id="fill">Fill</button>
                <button id="line">Line</button>
                <button id="rectangle">Rectangle</button>
                <button id="circle">Circle</button>
                <button id="clear">Clear</button>
                <button id="submit" onclick="document.location='gallery'">Submit</button>
                <DevLabel id="RGBVal">RGBVal</DevLabel>
            </div>
            <div class="myDoodl">
                <canvas id="myDoodl"></canvas>
            </div>
            <button id="settingsButton" onclick="openSettings()">
               Settings
            </button>
            <div id="settingsBG">
                <div id="settingsMain">
                    <p id="settingsTitle">
                        Settings
                    </p>
                    <div id="closeSettings" title="Close Settings" onclick="closeSettings()">
                        <p>
                            X
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <script type="text/javascript">
            var settingsDiv = document.getElementById("settingsBG");
            function openSettings(){
                settingsDiv.style.display = "block";
            }
            function closeSettings(){
                settingsDiv.style.display = "none";
            }
        </script>
        <script src="/js/main.js"></script>
    </body>
</html>
